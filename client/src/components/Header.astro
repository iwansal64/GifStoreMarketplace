---
import Logo from "./others/Logo.astro";
import MenuToggle from "./others/MenuToggle.astro";

---

<header class="header">
    <Logo />
    <MenuToggle />
</header>

<style>
    header {
        position: fixed;

        background-color: #fff;

        width: 100vw;
        padding: 10px;
        box-sizing: border-box;
        height: 70px;

        display: flex;
        justify-content: space-between;
        z-index: 1000;
    }
</style>